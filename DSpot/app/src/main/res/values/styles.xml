<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="AppTheme.MainAppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black_window_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:popupBackground">@color/black</item>
    </style>

    <!--Rating Bar-->
    <style name="RatingBarStyle" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:progressBackgroundTint">@color/dark_red</item>
        <item name="android:progressTint">@color/red</item>
    </style>

    <style name="AppTheme.MainAppTheme.SubTitleBar">
        <item name="android:background">@color/grey</item>
        <item name="android:padding">@dimen/sub_title_padding</item>
        <item name="android:layout_height">@dimen/sub_title_text_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/sub_title_padding_ends</item>
        <item name="android:paddingEnd">@dimen/sub_title_padding_ends</item>
        <item name="android:paddingTop">@dimen/sub_title_padding_ends</item>
    </style>

    <style name="AppTheme.MainAppTheme.Header3Text.GreyCat.SubTitleBarText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--Buttons-->
    <style name="AppTheme.MainAppTheme.Button">
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gray_cat</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--TEXT-->
    <style name="AppTheme.MainAppTheme.Header1Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_1_text_size</item>
    </style>
    <style name="AppTheme.MainAppTheme.Header1Text.GreyCat">
        <item name="android:fontFamily">@font/gray_cat</item>
    </style>

    <style name="AppTheme.MainAppTheme.Header2Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_1_text_size</item>
    </style>
    <style name="AppTheme.MainAppTheme.Header2Text.GreyCat">
        <item name="android:fontFamily">@font/gray_cat</item>
    </style>

    <style name="AppTheme.MainAppTheme.Header3Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_3_text_size</item>
    </style>
    <style name="AppTheme.MainAppTheme.Header3Text.GreyCat">
        <item name="android:fontFamily">@font/gray_cat</item>
    </style>

    <style name="AppTheme.MainAppTheme.Header4Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_4_text_size</item>
    </style>

    <!--EDIT TEXT-->
    <style name="AppTheme.MainAppTheme.EditTexts">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_4_text_size</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <!--Settings Activity Theme-->
    <style name="PreferencesTheme">
        <!--<item name="android:windowBackground">@color/backgroundMain</item>-->
        <!--<item name="android:background">#c10000</item>-->
        <!--<item name="android:background">@color/backgroundMain</item>-->
    </style>

</resources>
